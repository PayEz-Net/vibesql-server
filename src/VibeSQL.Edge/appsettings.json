{
  "VibeEdge": {
    "ServerUrl": "http://localhost:52411",
    "RefreshIntervalMinutes": 30,
    "BootstrapProviders": [
      {
        "ProviderKey": "payez-idp",
        "DisplayName": "PayEz Identity Provider",
        "Issuer": "https://idp.payez.net",
        "DiscoveryUrl": "https://idp.payez.net/.well-known/openid-configuration",
        "Audience": "payez-api",
        "IsBootstrap": true,
        "ClockSkewSeconds": 60
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Graylog": {
      "HostnameOrAddress": "localhost",
      "Port": "12201"
    }
  },
  "ConnectionStrings": {
    "EdgeDb": "Server=localhost;Port=5432;Database=vibesql;User Id=vibesql_user;Password=CHANGE_ME;SSLMode=Disable;Pooling=true;"
  },
  "AzureKeyVault": {
    "UseKeyVault": false,
    "VaultUri": "https://your-keyvault.vault.azure.net/"
  },
  "AllowedHosts": "*"
}
